@page
@model CV_Send.Pages.CV_s.SendCVModel
@{
}

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Create CV</h2>
			<br />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Programmer.FirstName"></label>
			<input asp-for="@Model.Programmer.FirstName" />
			<span asp-validation-for="@Model.Programmer.FirstName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Programmer.LastName"></label>
			<input asp-for="@Model.Programmer.LastName" />
			<span asp-validation-for="@Model.Programmer.LastName" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="@Model.Programmer.DateOfBirth"></label>
			<input asp-for="@Model.Programmer.DateOfBirth" />
			<span asp-validation-for="@Model.Programmer.DateOfBirth" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="@Model.Programmer.Nationality"></label>
			<select asp-for="Programmer.Nationality" class="form-select" asp-items=Model.Natio> </select>
			<span asp-validation-for="@Model.Programmer.Nationality" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Programmer.Gender" style="padding-right:10px"></label>
			<div class="form-check form-check-inline">
				<input asp-for="Programmer.Gender" class="form-check-input" type="radio" value="Male" />
				<label class="form-check-label">Male</label>
			</div>

			<div class="form-check form-check-inline">
				<input asp-for="Programmer.Gender" class="form-check-input" type="radio" value="Female" />
				<label class="form-check-label">Female</label>
			</div>

			<div class="form-check form-check-inline">
				<input asp-for="Programmer.Gender" class="form-check-input" type="radio" value="Others" />
				<label class="form-check-label">Others</label>
			</div>

			<span asp-validation-for="Programmer.Gender" class="text-danger"></span>



			<div class="mb-3">
				<label asp-for="Programmer.Programing_Skills"></label><br />
				<div class="form-check mb-3">
					@foreach (var skill in @Model.skills)
					{
						<input class="form-check-input" name="CheckedSkills" type="checkbox" value="@skill" />
						<label class="form-check-label">@skill</label>

						<br />
					}
				</div>


			</div>
			<div class="mb-3">
				<label asp-for="@Model.Programmer.Email"></label>
				<input asp-for="@Model.Programmer.Email" class="form-control" />
				<span asp-validation-for="Programmer.Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="ConfirmEmail"></label>
				<input asp-for="ConfirmEmail" class="form-control" />
				<span asp-validation-for="ConfirmEmail" class="text-danger"></span>
			</div>


			<div class="mb-3">
				<input hidden asp-for="@Model.x" />
				<input hidden asp-for="@Model.y" />
				<input hidden asp-for="@Model.v" />


				<label asp-for="x"></label>
				<input type="number" asp-for="x" />
				<span asp-validation-for="@Model.x" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="y"></label>
				<input type="number" asp-for="y" />
				<span asp-validation-for="@Model.y" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="sum"></label>
				<input type="number" asp-for="sum" placeholder="@Model.x + @Model.y" />
				<span asp-validation-for="@Model.v" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label class="form-label">Upload your Resume</label>
				<input type="file" name="Im" class="form-control" />
				<span asp-validation-for="@Model.Programmer.image" class="text-danger"></span>
			</div>

			<div class="mb-3 text-end">
				<button type="submit" class="btn btn-outline-success" style="width:150px;color:cornflowerblue">Create</button>
				<a asp-page="/Index" class="btn btn-light mx-3" style="width:150px">Back to List</a>
			</div>
		</div>

	</div>
</form>
