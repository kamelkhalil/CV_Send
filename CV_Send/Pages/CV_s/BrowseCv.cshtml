@page
@model CV_Send.Pages.CV_s.BrowseCvModel

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-12">
			<h2 class="text-primary">Programmers List</h2>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped table-center">
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Gender</th>
				<th>Grade</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var programmer in Model.programmers)
			{
				<tr>
					<td>@programmer.FirstName</td>
					<td>@programmer.LastName</td>
					<td>@programmer.Email</td>
					<td>@programmer.Gender</td>
					<td>@programmer.Grade</td>
					<td>
						<div class="btn-group" role="group">
							<a asp-page="View" asp-route-id="@programmer.Id" class="btn btn-primary">
								<i class="bi bi-file-earmark-spreadsheet"></i> View
							</a>
							<a asp-page="Edit" asp-route-id="@programmer.Id" class="btn btn-primary">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-page="Delete" asp-route-id="@programmer.Id" class="btn btn-danger">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
